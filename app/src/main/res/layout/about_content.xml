<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:weightSum="100"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- 10% -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:tileMode="repeat" >
            <TextView
                android:id="@+id/imageBrowseText"
                android:textColor="@color/bright_orange"
                android:textStyle="bold"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="About"
                />
        </LinearLayout>

        <!-- Responsive Images Selfies -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/responsiveImage1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="1.5">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_width="0dip"
                android:textSize="12sp">
            </LinearLayout>
            <ImageView
                android:id="@+id/imageHugo"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:textSize="12sp"
                android:src="@drawable/hugo_face"
                />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_width="0dip"
                android:textSize="12sp">
            </LinearLayout>
            <ImageView
                android:id="@+id/imageMarceau"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:textSize="12sp"
                android:src="@drawable/marceau_face" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:tileMode="repeat" >
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:tileMode="repeat" >
            <ImageView
                android:id="@+id/imageKhallil"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:textSize="12sp"
                android:src="@drawable/khallil_face"
                />
        </LinearLayout>
        <!-- -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:tileMode="repeat" >
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:tileMode="repeat" >
        <TextView
            android:textColor="@color/bright_orange"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Contact"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:tileMode="repeat" >
        <TextView
            android:id="@+id/aboutTextContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/aboutStrContact"
            />
    </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />
    </LinearLayout>

</RelativeLayout>